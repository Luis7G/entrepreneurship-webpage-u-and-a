<section id="contact" class="contact">
  <div class="container">
    <h2 tabindex="0">Contacto</h2>
    <div class="contact-content">
      <div class="contact-form">
        <form>
          <div class="form-group">
            <label for="name" tabindex="0">Nombre:</label>
            <input type="text" id="name" name="name" required tabindex="0" />
          </div>
          <div class="form-group">
            <label for="email" tabindex="0">Email:</label>
            <input type="email" id="email" name="email" required tabindex="0" />
          </div>
          <div class="form-group">
            <label for="message" tabindex="0">Mensaje:</label>
            <textarea id="message" name="message" required tabindex="0"
            ></textarea>
          </div>
          <button type="submit" class="btn" tabindex="0">Enviar</button>
        </form>
      </div>
      <div class="contact-info">
        <h3 tabindex="0">Visítanos</h3>
        <p tabindex="0">Calle Principal 123, Ciudad XYZ</p>
        <p tabindex="0">Teléfono: (123) 456-7890</p>
        <p tabindex="0">Email: info@tuzapateria.com</p>
        <div class="map" aria-labelledby="map-description">
          <p class="sr-only" tabindex="0">
            A continuación se mostrará un mapa que muestra la ubicación de
            nuestra tienda en Bogotá, Colombia.
          </p>
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d254508.51832999795!2d-74.27262003119694!3d4.648278403289357!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e3f9bfd2da6cb29%3A0x239d635520a33914!2sBogot%C3%A1%2C%20Colombia!5e0!3m2!1ses-419!2sec!4v1722123450364!5m2!1ses-419!2sec"
            width="300"
            height="400"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            tabindex="0"></iframe>
        </div>
      </div>
    </div>
  </div>
</section>
